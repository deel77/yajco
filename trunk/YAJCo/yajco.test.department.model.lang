language yajco.test.department.model

tokens
   NAME = "(((?!department)[a-zA-Z0-9.' ])+)"

skips
   " "
   "\t"
   "\n"
   "\r"

concept Directory
    AS: departments : list of Department
    CS: departments {Range(1..*)} 

concept Department
    AS: name : string {Identifier}, employees : list of Employee
    CS: "department" name {Token("NAME")} employees 

concept Employee
    AS: name : string, dep : Department
    CS: name {Token("NAME") NewLine Indent} "(" dep : string {References(Department) Token("NAME")} ")" 
      | name {Token("NAME") NewLine Indent} 

